pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building the code...'
                // Use Maven to build the code
                sh 'mvn clean install'  // Replace with your actual build command
            }
        }
        
        stage('Unit and Integration Tests') {
            steps {
                echo 'Running unit tests...'
                echo 'Running integration tests...'
                // Add your testing commands here
            }
        }
        
        stage('Code Analysis') {
            steps {
                echo 'Running code analysis...'
                // Add your code analysis commands here, like SonarQube
            }
        }
        
        stage('Security Scan') {
            steps {
                echo 'Performing security scan...'
                // Add your security scanning tool here, like OWASP Dependency-Check
            }
        }
        
        stage('Deploy to Staging') {
            steps {
                echo 'Deploying to staging server...'
                // Add deployment commands to staging here
            }
        }
        
        stage('Integration Tests on Staging') {
            steps {
                echo 'Running integration tests on staging...'
                // Add integration tests for staging
            }
        }
        
        stage('Deploy to Production') {
            steps {
                echo 'Deploying to production server...'
                // Add your production deployment commands here
            }
        }
    }
    
    post {
        success {
            mail to: "asgaurav9@gmail.com",
                subject: "Build Status: SUCCESS",
                body: "The build completed successfully!"
        }
        failure {
            mail to: "asgaurav9@gmail.com",
                subject: "Build Status: FAILURE",
                body: "The build failed. Please check Jenkins logs for details."
        }
        always {
            echo 'Pipeline completed.'
        }
    }
}
