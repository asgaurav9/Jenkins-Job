pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                script {
                    sh 'echo "Building..." >> build_log.txt'
                    // Add actual build commands here
                    sh 'echo "Build completed" >> build_log.txt'
                }
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                echo 'Running Unit and Integration Tests...'
                script {
                    sh 'echo "Running Unit and Integration Tests..." >> build_log.txt'
                    // Add test steps here
                    sh 'echo "Tests completed" >> build_log.txt'
                }
            }
        }
        stage('Code Analysis') {
            steps {
                echo 'Analyzing Code...'
                script {
                    sh 'echo "Analyzing Code..." >> build_log.txt'
                    // Add code analysis steps here
                    sh 'echo "Code analysis completed" >> build_log.txt'
                }
            }
        }
        stage('Security Scan') {
            steps {
                echo 'Performing Security Scan...'
                script {
                    sh 'echo "Performing Security Scan..." >> build_log.txt'
                    // Add security scan steps here
                    sh 'echo "Security scan completed" >> build_log.txt'
                }
            }
        }
        stage('Deploy to Staging') {
            steps {
                echo 'Deploying to Staging...'
                script {
                    sh 'echo "Deploying to Staging..." >> build_log.txt'
                    // Add deployment steps here
                    sh 'echo "Deployment to staging completed" >> build_log.txt'
                }
            }
        }
        stage('Integration Tests on Staging') {
            steps {
                echo 'Running Integration Tests on Staging...'
                script {
                    sh 'echo "Running Integration Tests on Staging..." >> build_log.txt'
                    // Add integration test steps here
                    sh 'echo "Integration tests completed" >> build_log.txt'
                }
            }
        }
        stage('Deploy to Production') {
            steps {
                echo 'Deploying to Production...'
                script {
                    sh 'echo "Deploying to Production..." >> build_log.txt'
                    // Add production deployment steps here
                    sh 'echo "Deployment to production completed" >> build_log.txt'
                }
            }
        }
    }
    post {
        success {
            mail to: 'asgaurav9@gmail.com',
                 subject: "SUCCESS: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
                 body: "Build ${env.BUILD_NUMBER} of ${env.JOB_NAME} was successful. Logs are available in build_log.txt.",
                 attachmentsPattern: 'build_log.txt'
        }
        failure {
            mail to: 'asgaurav9@gmail.com',
                 subject: "FAILURE: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
                 body: "Build ${env.BUILD_NUMBER} of ${env.JOB_NAME} failed. Check Jenkins and build_log.txt for details.",
                 attachmentsPattern: 'build_log.txt'
        }
        always {
            echo 'Pipeline completed.'
            sh 'echo "Pipeline completed" >> build_log.txt'
        }
    }
}
